    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>DvcmeCredencialesDomain</realm-name>
        <form-login-config>
            <form-login-page>/faces/login.xhtml</form-login-page>
            <form-error-page>/faces/access.xhtml</form-error-page>
        </form-login-config>
    </login-config>
    
    <security-role>
        <description></description>
        <role-name>ADMINISTRADOR</role-name>
    </security-role>
    <security-role>
        <description></description>
        <role-name>USUARIO_ADMINISTRADOR_INFEXT_VINCULACION</role-name>
    </security-role>
    <security-role>
